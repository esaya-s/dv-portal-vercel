# DV Portal Ethiopia - Optimized .htaccess for cPanel
# This version is designed to work with most cPanel configurations

# Enable URL rewriting
RewriteEngine On

# Handle Django URLs - redirect everything to passenger_wsgi.py
# Only redirect if the file/directory doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ passenger_wsgi.py [QSA,L]

# Serve static files directly (optional - improves performance)
RewriteRule ^static/(.*)$ staticfiles/$1 [L]

# Basic security headers (compatible with most servers)
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
</IfModule>

# Cache static files for better performance
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/ico "access plus 1 month"
</IfModule>
